/*
========================================================================================
    Nextflow config file for running full-size tests
========================================================================================
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/hicar -profile test_full,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'
    max_cpus   = 2
    max_memory = 6.GB
    max_time   = 6.h

    // Input data for full size test
    // TODO nf-core: Specify the paths to your full test data ( on nf-core/test-datasets or directly in repositories, e.g. SRA)
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    //input = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/samplesheet/samplesheet_full_illumina_amplicon.csv'
    input = '/Users/ouj/github/new/nf-core-hicar/assets/samplesheet.csv'

    // Genome references
    //genome = 'R64-1-1'
    //genome = 'GRCh37'
    fasta = 'https://raw.githubusercontent.com/jianhong/test-datasets/cageseq/reference/chr_sub.fasta'
    gtf   = 'https://raw.githubusercontent.com/jianhong/test-datasets/cageseq/reference/chr_sub.gtf'

}
